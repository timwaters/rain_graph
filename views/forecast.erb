-->

<canvas id="myChart" width="400" height="200"></canvas>

<% if @text_forecast %>
  <p class="forecast_text">
  <span class="headline"><%= @text_forecast[:headline] %></span> <br />
  <span class="nextperiod">Next: <%= @text_forecast[:nextperiod] %></span>
  </p>
<% end %>

<script type="text/javascript">
  var options = {
	  scaleOverride : true,
	  scaleSteps : 5,
	  scaleStepWidth : 2,
    scaleStartValue : 0,
    scaleLabel : "<%%=value%>",
  };

  var data = {
	labels : ["Now","1 Hour","2 Hour","3 Hour","4 Hour","5 Hour"],
	datasets : [
		
		{
			fillColor : "rgba(151,187,205,0.8)",
			strokeColor : "rgba(0,0,225,1)",
			pointColor : "rgba(151,187,205,1)",
			pointStrokeColor : "#fff",
      data : <%= @rainfall.to_s %>
		}
	]
}
  var ctx = document.getElementById("myChart").getContext("2d");
  var myNewChart = new Chart(ctx).Line(data,options);

</script>

